<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="io.github.teamb.btob.mapper.common.CommonMapper">

	<!-- 셀렉박스 리스트 -->
	<select id="selectBoxList"
		parameterType="io.github.teamb.btob.dto.common.SelectBoxListDTO"
		resultType="io.github.teamb.btob.dto.common.SelectBoxVO">
		
			SELECT 
				${commNo} AS "value",
				${commName} AS "text"
			FROM 
				${commonTable}
			WHERE 1=1
			<if test="targetCols != null and whereCols != null 
						and targetCols != '' and whereCols != ''">
				AND ${targetCols} = #{whereCols}
			</if>
		
	</select>
	
</mapper>